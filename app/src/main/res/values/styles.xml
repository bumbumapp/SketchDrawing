<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/green_dark</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="colorControlHighlight">#FFC107</item>
    </style>

    <style name="canvas_activity_button_tool_style_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">@color/white_color_daynight</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">3dp</item>
        <item name="tint">#FFC107</item>
        <item name="rippleColor">#FFC107</item>
    </style>

    <style name="canvas_activity_button_tool_style_back_land" parent="canvas_activity_button_tool_style_back">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="canvas_activity_button_tool_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="tint">#FFC107</item>
        <item name="rippleColor">#FFC107</item>
    </style>

    <style name="canvas_activity_button_tool_style_land" parent="canvas_activity_button_tool_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="default_large_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabCustomSize">80dp</item>
        <item name="android:backgroundTint">#eaddff</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="default_large_fab_style_activity_main" parent="default_large_fab_style">
        <item name="srcCompat">@drawable/ic_baseline_add_24</item>
    </style>

    <style name="recent_creations_layout_card_view_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="recent_creations_image_button_style">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="srcCompat">@drawable/ic_baseline_star_border_24</item>
        <item name="iconGravity">start</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="recent_creations_text_view_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/manrope_ligth</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/defaultToolbarItemColor</item>
    </style>

    <style name="recent_creations_text_view_style2" parent="recent_creations_text_view_style">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/defaultToolbarItemColor</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="activityCanvas_bottomNavigationView_style_constraints" parent="Widget.Material3.BottomNavigationView">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="activityCanvas_bottomNavigationView_style" parent="activityCanvas_bottomNavigationView_style_constraints">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemIconTint">@android:color/black</item>
        <item name="menu">@menu/activity_main_bottom_navigation_menu</item>
    </style>

    <style name="recentCreationsLayout_imageView_style_constraints">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>


    <style name="recentCreationsLayout_imageView_style" parent="recentCreationsLayout_imageView_style_constraints">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="fragmentFilters_button_portrait_style">
        <item name="android:layout_weight">0</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">#FFC107</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/white_color_daynight</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">#FFC107</item>
    </style>

    <style name="fragmentFilters_button_landscape_style">
        <item name="android:layout_weight">0</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">#FFC107</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:backgroundTint">@color/white_color_daynight</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">#FFC107</item>
    </style>

    <style name="activityCanvas_canvasFragmentHostCardViewParent_style">
        <item name="android:background">@drawable/border_drawable_frame</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">10dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="defaultFragmentStyle">
        <item name="android:background">@color/fragment_background_color_daynight</item>
        <item name="android:clickable">true</item>
    </style>
</resources>